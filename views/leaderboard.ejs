<!DOCTYPE html>
<html>
<head>
  <title>Leaderboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="leaderboard">
    <h1>Top Scores</h1>
    <table>
      <tr>
        <th>Rank</th>
        <th>Player</th>
        <th>Score</th>
      </tr>
      <% scores.forEach((score, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= score.playerName %></td>
          <td><%= score.score %></td>
        </tr>
      <% }) %>
    </table>
    <a href="/games/new" class="btn">New Game</a>
  </div>
</body>
</html>